{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bard",
  "version": "1.1.2",
  "identifier": "com.bard.app",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Bard",
        "width": 540,
        "height": 780,
        "minWidth": 540,
        "minHeight": 780,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "alwaysOnTop": false,
        "transparent": false,
        "shadow": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": false,
    "active": true,
    "targets": "all",
    "resources": [
      "helpers/bard-auth/bard-auth"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Briggs Kellogg",
    "category": "Productivity",
    "shortDescription": "Real-time voice transcription powered by Scribe v2",
    "longDescription": "Bard is a voice transcription application for real-time voice transcription using ElevenLabs Scribe v2 Realtime API.",
    "copyright": "Copyright Â© 2025 Briggs Kellogg. All rights reserved.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": "Developer ID Application: Briggs Kellogg (24KAG7M42P)",
      "providerShortName": null,
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "infoPlist": "Info.plist"
    },
    "iOS": {
      "developmentTeam": "24KAG7M42P",
      "minimumSystemVersion": "14.0"
    }
  },
  "plugins": {
    "updater": {
      "active": false,
      "endpoints": [],
      "dialog": false,
      "pubkey": ""
    }
  }
}
